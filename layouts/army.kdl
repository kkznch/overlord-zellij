layout {
    // Command tab: Overlord + Strategist (司令部)
    tab name="command" {
        pane split_direction="vertical" {
            // 魔王 (Overlord) - 要件定義・最終検収
            pane name="overlord" size="30%" {
                command "bash"
            }
            // 闇の軍師 (Strategist) - タスク分解・指揮
            pane name="strategist" size="70%" {
                command "bash"
            }
        }
    }

    // Battlefield tab: Inferno (主戦場)
    tab name="battlefield" focus=true {
        // 業火の将 (Inferno) - Logic & Core
        pane name="inferno" {
            command "bash"
        }
    }

    // Support tab: Glacier + Shadow + Storm (補助)
    tab name="support" {
        pane split_direction="horizontal" {
            // 氷結の将 (Glacier) - Arch & Refactor
            pane name="glacier" size="33%" {
                command "bash"
            }
            // 常闇の将 (Shadow) - Audit & Security
            pane name="shadow" size="33%" {
                command "bash"
            }
            // 疾風の将 (Storm) - UI & Docs
            pane name="storm" size="34%" {
                command "bash"
            }
        }
    }

    // Compact bar at bottom
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        children
    }
}
